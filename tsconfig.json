{
   "compilerOptions": {
       "outDir": "./dist/out-tsc",
       "module": "commonjs",
       "target": "es5",
       "lib": [
           "es6",
           "dom"
       ],
       "types": ["reflect-metadata", "mocha"],
       "noImplicitAny": false,
       "sourceMap": false,
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "moduleResolution": "node",
       "noUnusedLocals": true
   },
   "compileOnSave": false,
   "exclude": [
       "node_modules"
   ],
   "typeRoots": [
      "@types",
      "./node_modules/@types",
    ] 
}
